{
  "name": "FreeBoardGame.org",
  "version": "1.0.0",
  "description": "",
  "main": ".eslintrc.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --forceExit",
    "test:coveralls": "cat coverage/lcov.info | node node_modules/.bin/coveralls",
    "build": "tsc",
    "prod": "yarn run build && webpack --config prod.webpack.config.js && pm2 start pm2-prod.config.js",
    "dev": "webpack --progress --config dev.webpack.config.js && tsc && webpack --watch --progress --config dev.webpack.config.js | node dist/server.js",
    "precommit": "yarn run verify-lint && yarn run verify-tsfmt && yarn run build && yarn run test",
    "pre": "yarn run precommit",
    "fix": "yarn run lint && yarn run tsfmt",
    "tsfmt": "tsfmt -r",
    "verify-tsfmt": "tsfmt --verify",
    "lint": "tslint --fix -c tslint.json 'src/**/*.ts*'",
    "verify-lint": "tslint -c tslint.json 'src/**/*.ts*'",
    "pm2": "pm2"
  },
  "pre-commit": [
    "precommit"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:freeboardgame/FreeBoardGame.org.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/freeboardgame/FreeBoardGame.org/issues"
  },
  "homepage": "https://github.com/freeboardgame/FreeBoardGame.org",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/enzyme-adapter-react-16": "^1.0.1",
    "@types/jest": "^22.1.1",
    "@types/koa": "^2.0.48",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-static": "^4.0.0",
    "@types/material-ui": "^0.20.8",
    "@types/prop-types": "^15.5.8",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/react-router-dom": "^4.3.1",
    "@types/shortid": "0.0.29",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.2.0",
    "concurrently": "^3.5.1",
    "coveralls": "^3.0.0",
    "css-loader": "^1.0.1",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^22.0.1",
    "koa-helmet": "^3.3.0",
    "nodemon": "^1.18.9",
    "pm2": "3.2.9",
    "pre-commit": "^1.2.2",
    "react-test-renderer": "^16.7.0",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.2.1",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "tsc-watch": "^1.0.31",
    "tslint": "^5.12.1",
    "tslint-language-service": "^0.9.9",
    "tslint-react": "^3.2.0",
    "typescript": "^3.2.2",
    "typescript-formatter": "^7.2.2",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1",
    "webpack-hot-middleware": "^2.24.3"
  },
  "dependencies": {
    "@material-ui/core": "^1.5.1",
    "@types/enzyme": "^3.1.15",
    "@types/koa-router": "^7.0.37",
    "@types/mustache": "^0.8.32",
    "babel-polyfill": "^6.26.0",
    "chess.js": "^0.10.2",
    "copy-to-clipboard": "^3.0.8",
    "copy-webpack-plugin": "^4.6.0",
    "flamecoals-boardgame.io": "^0.33.0",
    "html-webpack-harddisk-plugin": "^1.0.1",
    "koa": "^2.6.2",
    "koa-router": "^7.4.0",
    "koa-send": "^4.1.3",
    "koa-socket-2": "^1.0.17",
    "koa-static": "^4.0.3",
    "material-ui": "^0.20.2",
    "mustache": "^2.3.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-ga": "^2.5.6",
    "react-router-dom": "^4.2.2",
    "shortid": "^2.2.14",
    "socket.io-client": "^2.2.0",
    "workbox-sw": "^3.6.3",
    "workbox-webpack-plugin": "^3.6.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**",
      "!src/server.tsx",
      "!src/server.tsx",
      "!src/app.tsx",
      "!**/*.d.ts",
      "!src/games/chess/chessjswrapper.ts"
    ],
    "testURL": "http://localhost",
    "setupFiles": [
      "./test/test-shim.js",
      "./test/test-setup.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.test.(ts|tsx|js)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleNameMapper": {
      "\\.(css|jpg|png|svg|webp)$": "<rootDir>/test/empty-module.js"
    }
  }
}
